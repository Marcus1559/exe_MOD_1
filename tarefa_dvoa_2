<body>
    <body>
        <h1>Calculadora de Média</h1>
        <form id="form">
            <label for="num1">Número 1:</label>
            <input type="number" id="num1" required><br><br>
            
            <label for="num2">Número 2:</label>
            <input type="number" id="num2" required><br><br>
            
            <label for="num3">Número 3:</label>
            <input type="number" id="num3" required><br><br>
            
            <label for="num4">Número 4:</label>
            <input type="number" id="num4" required><br><br>
            
            <button type="button" onclick="calcularMedia()">Calcular Média</button>
        </form>
    
        <script>
            function calcularMedia() {
                
                var num1 = parseFloat(document.getElementById('num1').value);
                var num2 = parseFloat(document.getElementById('num2').value);
                var num3 = parseFloat(document.getElementById('num3').value);
                var num4 = parseFloat(document.getElementById('num4').value);
    
                var media = (num1 + num2 + num3 + num4) / 4;
    
                
                console.log("A média dos números inseridos é: " + media);
            }
        </script>   
